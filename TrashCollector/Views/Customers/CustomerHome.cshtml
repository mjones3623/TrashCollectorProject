@model TrashCollector.Models.Customer

@{
    ViewData["Title"] = "CustomerHome";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CustomerHome</h1>

<h2>On your home page you can:</h2>
<table>
    <tr><td>View your balance.</td></tr>
    <tr><td>Change your weekly pick-up day.</td></tr>
    <tr><td>Request an extra, one-time, pickup for a specific date of your choice.</td></tr>
    <tr><td>And, if you will be leaving for an extended period, you can specify a START and END date to temporarily suspend pickups.</td></tr>
</table>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CustomerHome">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />

            <div class="form-group">
                <label asp-for="Balance" class="control-label"></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PickupDay" class="control-label"></label>
                <input asp-for="PickupDay" class="form-control" />
                <span asp-validation-for="PickupDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OneTimePickUpDate" class="control-label"></label>
                <input asp-for="OneTimePickUpDate" class="form-control" />
                <span asp-validation-for="OneTimePickUpDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempSuspendStart" class="control-label"></label>
                <input asp-for="TempSuspendStart" class="form-control" />
                <span asp-validation-for="TempSuspendStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TempSuspendEnd" class="control-label"></label>
                <input asp-for="TempSuspendEnd" class="form-control" />
                <span asp-validation-for="TempSuspendEnd" class="text-danger"></span>
            </div>

                                   
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
